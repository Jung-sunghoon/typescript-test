{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build/js",
        "target": "ES2015",
        "noEmitOnError": false,
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "isolatedModules": true,
        "removeComments": true,
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "./src/**/*.ts",
    ]
}